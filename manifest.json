{
	"name": "Video Picture-in-Picture",
	"version": "0.0.1",
	"description": "Continue watching your videos whilst doing something else",
	"permissions": [
		"activeTab"
	],
	"browser_action": {
		"default_popup": "popup/dropdown.html",
		"default_icon": {
			"16": "img/icon-16.png",
			"48": "img/icon-48.png",
			"128": "img/icon-128.png"
		}
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["scripts/content_script.js"]
		}
	],
	"manifest_version": 2,

	"icons": {
		"16": "img/icon-16.png",
		"48": "img/icon-48.png",
		"128": "img/icon-128.png"
	}

}
